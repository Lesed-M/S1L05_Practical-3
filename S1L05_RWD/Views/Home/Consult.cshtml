@{
    ViewData["Title"] = "Consultation";
}

<div class="container mt-3">
    <h2>Book a consultation with your lecturer</h2>
    <p>Your details</p>
    <form method="post" action="@Url.Action("Consult", "Home")">
        <!-- Form action URL should match your controller's action -->
        <div class="row">
            <div class="col">
                <label for="Firstname">First Name</label>
                <input type="text" class="form-control" placeholder="Enter First Name" name="fnme" required>
            </div>
            <div class="col">
                <label for="Lastname">Last Name</label>
                <input type="text" class="form-control" placeholder="Enter Last Name" name="lnme" required>
            </div>
        </div>

        <div class="row mt-3">
            <label for="email">Email:</label>
            <input type="email" class="form-control col-sm-6 col-md-4" id="email" placeholder="Enter email" name="email" required>
        </div>

        <div class="mb-3 mt-3">
            <label for="comment">Comments:</label>
            <textarea class="form-control" rows="5" id="comment" name="text"></textarea>
        </div>

        <button type="submit" class="btn btn-primary btn-sm" >Submit</button>
    </form>
</div>
